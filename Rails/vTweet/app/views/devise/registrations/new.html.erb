
<% content_for :title, "vTweet Sign up" %>
<div id="container">

  <div id="content">

    <div id="formContainer">
      
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div>
        <%= f.email_field :email, :class => 'inputField', :placeholder => 'Enter Company Email', :size => '40'  %>
      </div>

      <div>
        <%= f.password_field :password, :class => 'inputField', :placeholder => 'Password', :size => '30' %>
        <%= f.submit "Sign up" %>
      </div>


    <% end %>

    <!--<%= render "devise/shared/links" %> -->
    </div>

    <p class="text">Welcome to vTweet.<br>
    Find out what's happening, right now, with the people and organizations you care about.
    </p>
  </div>
</div>